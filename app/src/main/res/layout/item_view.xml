<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_view_height"
    android:id="@+id/activity_stuff_item_view" >

    <ImageView
        android:id="@+id/slika_view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/naziv_proizvoda"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text=""
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sale"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:focusable="false"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_local_grocery_store_black_24dp"
                android:focusableInTouchMode="false"
                android:text="@string/dugme_za_prodaju" />

            <TextView
                android:id="@+id/cijena_proizvoda"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="16dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                android:gravity="bottom"
                tools:text="100yen" />

            <TextView
                android:id="@+id/kolicina_proizvoda"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36sp"
                tools:text="3" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>